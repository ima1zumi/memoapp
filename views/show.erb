<div class="box">
  <p>
    <% File.open("#{@path}", "r") do |f| %>
    <% f.each_line do |line| %>
    <%= line.gsub(/\R/, "<br>") %>
    <% end %>
    <% end %>
  </p>
</div>
<div class="field is-grouped">
  <div class="control">
    <a href="<%= params[:filename] %>/edit" class="button is-primary">Edit</a>
  </div>
  <div class="control">
    <form action="../<%= params[:filename] %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete" class="button is-danger">
    </form>
  </div>
  <div class="control">
    <a href="/" class="button is-light">Cancel</a>
  </div>
